<%
if (typeof data.perfil != 'undefined' && data.perfil.length > 0) {
	for (var i = data.perfil.length - 1; i >= 0; i--) {
%>
<section>
	<div class="center">
		<img class="mur-img" src="/assets/imgs/perfil-1.jpg">
		<form method="POST" action="">
			<input type="hidden" name="id_usuario" value="<%= usuario.id %>">
			<input type="hidden" name="id_usuario2" value="<%= data.perfil[i].id %>">
			<%
			if (data.perfil[i].amigos <= 0 && data.perfil[i].id != usuario.id) {
			%>
			<a href="" class="btn blue darken-2 ajax-submit" data-href="/sistema/usuarios/contatos/adicionar/" data-action="/sistema/usuarios/ver/<%= data.perfil[i].id %>" style="width: 100%;margin-top: -8px;">Adicionar Usuário</a>
			<%
			} else if(data.perfil[i].id != usuario.id) {
			%>
			<a href="" class="btn red darken-2 ajax-submit" data-href="/sistema/usuarios/contatos/remover/" data-action="/sistema/usuarios/ver/<%= data.perfil[i].id %>" style="width: 100%;margin-top: -8px;">Excluir dos Contatos</a>
			<%
			}
			%>
		</form>
	</div>
	<ul class="row center tabs tabs-fixed-width">
		<li class="tab col <%= usuario.tipo == 1 ? 's4' : 's6' %> blue-mur">
			<a href="#post-user">
				<i class="fa fa-list-alt" aria-hiden="true"></i>
			</a>
		</li>
		<li class="tab col <%= usuario.tipo == 1 ? 's4' : 's6' %> blue-mur">
			<a href="#info-user">
				<i class="fa fa-info-circle" aria-hiden="true"></i>
			</a>
		</li>
		<%
			if (usuario.tipo == 1) {
		%>
		<li class="tab col s4 blue-mur">
			<a class="swipe-margin ajax-load" href="/sistema/chats">
				<i class="fa fa-comments" aria-hiden="true"></i>
			</a>
		</li>
		<%
			}
		%>
	</ul>
	<div id="post-user" class="swipe-margin">
		<div class="row">
			<%- include('../postagens/postagens'); %>
		</div>
	</div>
	<div id="info-user" class="swipe-margin">
		<div class="container">
			<div class="row">
				<div class="card-panel panel-full">
					<div class="card-content">
						MurEr <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="MurEr" data-id="'+data.perfil[i].id+'" data-collum="nome_murer"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].nome_murer %>
					</div>
				</div>
				<% if(usuario.tipo == 1) {
				%>
				<div class="card-panel panel-full">
					<div class="card-content">
						Universidade <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="Universidade" data-id="'+data.perfil[i].id+'" data-collum="id_faculdade"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= typeof data.perfil[i].faculdade != 'undefined' && data.perfil[i].faculdade != '' ? data.perfil[i].faculdade : 'Não Informado' %>
					</div>
				</div>
				<div class="card-panel panel-full">
					<div class="card-content">
						Curso <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="Curso" data-id="'+data.perfil[i].id+'" data-collum="id_curso"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= typeof data.perfil[i].curso != 'undefined' && data.perfil[i].curso != '' ? data.perfil[i].curso : 'Não Informado' %>
					</div>
				</div>
				<%
				} %>
				<div class="card-panel panel-full">
					<div class="card-content">
						E-Mail <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="E-mail" data-id="'+data.perfil[i].id+'" data-collum="email"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].email %>
					</div>
				</div>
				<% if(usuario.tipo == 1) {
				%>
				<div class="card-panel panel-full">
					<div class="card-content">
						Gênero <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="Gênero" data-id="'+data.perfil[i].id+'" data-collum="genero"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].genero %>
					</div>
				</div>
				<div class="card-panel panel-full">
					<div class="card-content">
						Data de Nascimento <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="Data de Nascimento" data-id="'+data.perfil[i].id+'" data-collum="nascimento"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].nascimento %>
					</div>
				</div>
				<%
				} %>
				<div class=" col s4 right card-panel">
					<div class="card-content">
						UF <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="UF" data-id="'+data.perfil[i].id+'" data-collum="uf"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].uf %>
					</div>
				</div>
				<div class=" col s7 right card-panel">
					<div class="card-content">
						Cidade <%- data.perfil[i].id == usuario.id ? '<span class="blue-text right modal-input" data-nome="Cidade" data-id="'+data.perfil[i].id+'" data-collum="cidade"><i class="fa fa-edit"></i></span>' : '' %>
					</div>
					<div class="card-title">
						<%= data.perfil[i].cidade %>
					</div>
				</div>
				<% if(data.perfil[i].id == usuario.id || usuario.id == 1) {
				%>
				<div class="col s12 center-align">
					<a class="red darken-1 btn modal-remover-mount" data-href="#modaldeletar" data-texto="Tem certeza que deseja desativar esta conta? Esta ação não pode ser desfeita." data-to="/sistema/usuarios/desativar/" data-back="/sistema/usuarios/contatos" data-id="<%= data.perfil[i].id %>">Desativar Conta</a>
				</div>
				<%
				}
				%>
			</div>
		</div>
	</div>
	<%
		if (usuario.tipo == 1) {
	%>
		<div id="test-swipe-3" class="swipe-margin">
		</div>
	<%
		}
	%>
</section>
<script type="text/javascript">
	$('#footer').fadeOut('slow');
</script>
<%
	}
} else {
%>
	<p class="center-align">
		Nenhuma resultado foi encontrado.
	</p>
<%
}
%>