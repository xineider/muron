<form method="POST" action="">
  <ul class="collection">
    <%
    if (typeof data != 'undefined' && data.length > 0) {
      for (var i = data.length - 1; i >= 0; i--) {
        %>


        <div style="position:relative">

          <a href="/sistema/usuarios/ver/<%= data[i].id_usuario2 %>" class="ajax-load">
            <li class="collection-item avatar">
              <img src="/assets/uploads/<%= data[i].imagem %>" alt="" class="circle">
              <span class="title"><%= data[i].nome_murer %></span>
              <p style="line-height: 9px;"><small><%= data[i].nome %><br>
                <%= data[i].email %></small>
              </p>
            </li>
          </a>

          <%if((data[i].amigos == 0) && (data[i].tipo == 1) ){%>

          <div class="secondary-content" style="position: absolute;top: 16px;right: 16px;">
            <p>
              <input type="checkbox" id="selecionar-usuario-<%= data[i].id_usuario2%>" data-id="<%= data[i].id_usuario2%>" />
              <label for="selecionar-usuario-<%= data[i].id_usuario2%>"></label>
            </p>
          </div>


          <%
        }
      }
    } else {
      %>
      <li class="center-align">
        Nenhum contato foi encontrado com essa pesquisa
      </li>
      <%
    }
    %>
  </ul>

  <div style="position:fixed;bottom:5px;width:100%;">
    <button style="margin:0 auto;display:block;" class="btn blue darken-1 white-text ajax-submit" data-href="/sistema/usuarios/contatos/adicionar-varios" data-action="/sistema/usuarios/contatos">Adicionar Contatos</button>    
  </div>

</form>