<div class="col s12 pai valign-wrapper">
	<div class="input-field col s10">
		<input type="text" id="faculdade-filtro" class="autocomplete" placeholder="Digite o nome da faculdade">
		<label for="faculdade-filtro">Faculdade</label>
	</div>
	<div class="col s2 center-align">
		<button class="btn-floating btn-small waves-effect waves-light red remove">
			<i class="fa fa-times" aria-hidden="true"></i>
		</button>
	</div>
</div>



<script src="/assets/js/jquery-ui.js"></script>

<script>

	$( "#faculdade-filtro" ).autocomplete({
		source: function( request, response ){
			$.ajax({
				method:'GET',
				async:true,
				dataType:'json',
				url:'/sistema/api/filtro/pesquisar/faculdade/'+request.term,
				beforeSend: function() {
				},
				success: function(data) {
					response(data);
					response($.map(data, function (item) {
						return {
							label: item.name,
							value: item.name
						};
					}));

				},
				error: function(xhr) {
					console.log(xhr);
				},
				complete: function() {
				}
			});
		}
	});

</script>