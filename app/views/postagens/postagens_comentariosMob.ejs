<div class="modal-content" style="overflow-x: hidden;">
	<div href="" class="modal-close red-text" style="    position: absolute;
    right: 2%;
    top: 0%;
    font-size: 1.5em;
    cursor: pointer;">
		<i class="fa fa-times-circle" aria-hidden="true"></i>
	</div>
	<div class="">
	<%
	if (typeof data.comentarios != 'undefined' && data.comentarios.length > 0) {
		for (var i = data.comentarios.length - 1; i >= 0; i--) {
	%>
		<div class="row comentario parent">
			<div class="col s12 text">
				<%
				if (data.comentarios[i].id_usuario == usuario.id) {
				%>
				<div class="right-align col s6 horizontal fixed-action-btn click-to-toggle">
					<a>
						<i class="fa fa-ellipsis-h"></i>
					</a>
				    <ul>
				      <li><a class="btn-floating red white-text remove" data-link="/mobsmart/postagens/desativar/comentario/" data-id="<%= data.comentarios[i].id %>"><i class="fa fa-times"></i></a></li>
				    </ul>
				</div>
				<%
				}
				%>
				<p>
					<a class="ajax-load" href="/mobsmart/usuarios/ver/<%= data.comentarios[i].id_usuario %>">
						<%= data.comentarios[i].nome %>:
					</a>
					<%= data.comentarios[i].texto %>
				</p>
			</div>
		</div>
	<%
		}
	} else {
	%>
		<p class="center-align">
			Nenhuma comentário foi publicado.
		</p>
	<%
	}
	%>
	</div>
</div>
<div class="modal-footer">
	<form method="POST" action="" id="comentario-form">
		<div class="col s12 input-field valign-wrapper m0">
			<input type="hidden" name="id_postagem" value="<%= data.postagem %>">
			<input type="hidden" name="id_usuario" value="<%= usuario.id %>">
			<input type="text" name="texto" placeholder="Deixe seu comentário">
			<button class="sufix ajax-submit"  data-href="/sistema/postagens/cadastrar/comentario/"><i class="fa fa-chevron-circle-right blue-text"></i></button>
		</div>
	</form>
</div>