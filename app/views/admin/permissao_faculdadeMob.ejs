<section>
	<% if (usuario.id == 1) {%>
	<div class="row white">
		<div class="col s12">

			<!-- só um teste para ver se é o admin mesmo -->

			<table id='tabela-admin-usuario' class="centered">
				<thead>
					<tr>
						<td>Nome</td>
						<td>Login</td>
						<td>E-mail</td>
						<td>Telefone</td>
						<td>Nome Contato</td>
						<td>Tipo</td>
						<td>Validar</td>
						<td>Excluir</td>
					</tr>
				</thead>
				<tbody>

					<% if (typeof data.usuarios != 'undefined' && data.usuarios.length > 0) {
						for (var i = data.usuarios.length - 1; i >= 0; i--) {
							%>

							<tr>
								<td><%= data.usuarios[i].nome %></td>
								<td><%= data.usuarios[i].nome_murer %></td>
								<td><%= data.usuarios[i].email %></td>
								<td><%= data.usuarios[i].celular %></td>
								<td><%= data.usuarios[i].nome_contato %></td>
								<td>
									<% switch(data.usuarios[i].tipo){ 
										case 0: %>
										Não Definido
										<% break;
										case 1: %>
										Murer
										<% break;
										case 2: %>
										Faculdade
										<% break;
										case 3: %>
										Divulgador
										<% break;
										case 4:	%>
										Estágio
										<%break;}%>
									</td>
								<td>
									<a class="modal-validate-mount" data-href="#modalvalidar" data-texto="Tem certeza que deseja aprovar esta conta? Esta ação não pode ser desfeita." data-to="/mobsmart/admin/aprovarUsuario/" data-back="/mobsmart/admin/permissao-faculdades" data-id="<%= data.usuarios[i].id %>">
										<i class="fas fa-check green-text text-darken-1"></i>
									</a>
								</td>
									<td>
										<a class="modal-remover-mount" data-href="#modaldeletar" data-texto="Tem certeza que deseja desativar esta conta? Esta ação não pode ser desfeita." data-to="/mobsmart/usuarios/desativar/" data-back="/mobsmart/admin/permissao-faculdades" data-id="<%= data.usuarios[i].id %>">
											<i class="fas fa-times red-text text-darken-1"></i>
										</a>
									</td>
								</tr>

								<%}} else {%>
								<tr>
									<td colspan="8">Nenhum usuário foi encontrado.</td>
								</tr>
								<%} %>

							</tbody>

						</table>
					</div>
				</div>
				<%}else{	%>
				<div>
					<p>Desculpe, somente o administrador pode ver esta página!</p>
				</div>


				<%}%>
			</section>